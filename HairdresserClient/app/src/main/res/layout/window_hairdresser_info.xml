<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#147a8a">

    <TextView
        android:id="@+id/hairdresserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3e0ec8"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hairdresserAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Opening hours: "
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/hairdresserSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email: "
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/hairdresserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Phone number: "
            android:id="@+id/textView4"
            android:textStyle="bold"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/hairdresserPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Type: "
            android:id="@+id/textView5"
            android:textStyle="bold"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/hairdresserType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Facebook: "
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/hairdresserFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make an appointment"
        android:id="@+id/appointmen"
        android:textSize="10dp" />

</LinearLayout>